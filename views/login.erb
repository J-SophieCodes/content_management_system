<form action="/users/login" method="post">
  <div>
    <label for="username">Username:
      <input name="username" type="text" value="<%= params[:username] %>" />
    </label>
  </div>
  <div>
    <label for="password">Password:
      <input name="password" type="text" value="<%= params[:password] %>" />
    </label>
  </div>
  <button type="submit">Sign In</button>
</form>